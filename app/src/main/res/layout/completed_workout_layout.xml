<?xml version="1.0" encoding="utf-8"?>
<!--This file contains the xml code for the screen when the user finishes
    their workout.

    using this custom settings

        android:fontFamily="@font/circular"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/ic_button_background"

      All objects have been constrained to top/bottom of the screen


  -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/woohoo_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circular"
        android:layout_marginBottom="32sp"
        android:text="WOOHOOO!!"
        android:textColor="@color/colorText"
        android:textSize="@dimen/_30sdp"  />

    <TextView
        android:id="@+id/workout_complete_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circular"
        android:gravity="center"
        android:text="Workout Complete"
        android:textColor="@color/colorTextBackground"
        android:textSize="@dimen/_25sdp" />

    <!-- running logo (same as splash screen) -->

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        app:srcCompat="@drawable/ic_vector_object" />



    <!--action button for dashboard -->
        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="32sp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:background="@drawable/ic_button_background"
            android:onClick="returnToDashboard"
            android:padding="8sp"
            android:text="DASHBOARD"
            android:textColor="@color/colorText"
            android:textColorHint="#FFFFFF"
            android:textSize="@dimen/_17sdp" />


    </LinearLayout>
</LinearLayout>
